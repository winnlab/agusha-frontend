<div class="popUpWrap{{#if visible}} visible{{/if}} {{classes}}">
    <div class="popUpBody">
        <div class="contentWrap">
            <div class="close"></div>
            <div class="title">{{{title}}}</div>
            <div class="text">
            	<div class="childUserPic">
            		<div class="photoArea">
                        <img class="photoCircle" src="{{child.image.large}}" />
                    </div>
                    <div class="buttons">
                        <div class="button upload" {{uploader 'child'}}>Загрузить</div>
                        <div class="button remove">Удалить</div>
                    </div>   
            	</div>
            	<div class="childMetaInfo">
            		<input type="Ванечка" can-value="child.name" placeholder="Имя детеныша" class="deletable">
            		<div class="buttons">
            			<input type="radio" can-value="child.gender" class="childGender" value="1" name="child_gender" id="child_male" {{#genderChecked 'male'}}checked{{/genderChecked}}>
            			<label for="child_male">
    						мальчик
            			</label>
            			<input type="radio" can-value="child.gender" class="childGender" value="2" name="child_gender" id="child_female" {{#genderChecked 'female'}}checked{{/genderChecked}}>
            			<label for="child_female">
            				девочка
            			</label>
            		</div>
            		<div class="childBirthDate">
                        <select class="childBrithDay" can-value="child.birth.day">
                            <option disabled="disabled" selected>День</option>
                            {{#each dates.days}}
                                <option value="{{.}}">{{.}}</option>
                            {{/each}}
                        </select>
                        <select class="childBrithMonth"  can-value="child.birth.month">
                            <option disabled="disabled" selected>Мес.</option>
                            {{#each dates.months}}
                                <option value={{@index}}>{{.}}</option>
                            {{/each}}
                        </select>
                        <select class="childBrithYear" can-value="child.birth.year">
                            <option disabled="disabled" selected>Год</option>
                            {{#each dates.years}}
                                <option value="{{.}}">{{.}}</option>
                            {{/each}}
                        </select>
            		</div>
            	</div>
            </div>
            <div class="bottomButton">
	            <button class="button ok">Сохранить</button>
            </div>
        </div>
    </div>
</div>

