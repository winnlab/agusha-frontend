extends ../layout

block append header
    link(href="/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css")

block append scripts
    script(src="/js/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")
    script.
        $(function() {
            $(".textarea").wysihtml5();
        });

block content
    section.content
        .row
            .col-md-10
                .box.box-primary
                    .box-header
                        .box-title= "Редактирование категории"
                    form(role="form" enctype="multipart/form-data" method="post" action="/admin/category")
                        .box-body
                            if category._id
                                input(type="hidden" name="id" value=category._id)
                            .form-group
                                label(for="name")= "Название:"
                                input.form-control(type="text" name="name" placeholder="Название категории" value=category.name)

                            .form-group
                                .checkbox
                                    label
                                        if category.active == false
                                            input(type="checkbox" name="active")
                                        else
                                            input(type="checkbox" name="active" checked)
                                        span= " Активен?"
                                
                        .box-footer
                            button.btn.btn-primary(type="submit")= "Сохранить изменения"