doctype html
html(lang="ru")
	head
		title= Вход
		link(rel='stylesheet' href='/js/plugins/adminlte/css/bootstrap.min.css')
		link(rel='stylesheet' href='/css/admin/auth.css')
	body
		.container
			.row
				.col-sm-6.col-md-4.col-md-offset-4
					h2.text-center.login-title= 'Введите логин и пароль'
					.account-wall
						img.profile-img(src="/img/user.png")
						form.form-signin(action="login" method="POST")
							input.form-control(type="text" name="username" placeholder="Логин" required autofocus)
							input.form-control(type="password" name="password" placeholder="Пароль" required)
							button.btn.btn-lg.btn-primary.btn-block(type="submit")= "Войти"
							a.pull-right.need-help(href="#")= "Забыли пароль?"
							span.clearfix
						.temp= message