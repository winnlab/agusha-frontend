		ol.carousel-indicators
			li.active(data-target="#main_carousel" data-slide-to="0")
			li(data-target="#main_carousel" data-slide-to="1")
			li(data-target="#main_carousel" data-slide-to="2")
			li(data-target="#main_carousel" data-slide-to="3")
		
		.content
			a.left.carousel-control(href="#main_carousel" role="button" data-slide="prev")
			a.right.carousel-control(href="#main_carousel" role="button" data-slide="next")
		
