- var likesAmount = article.likes ? article.likes.length : 0;
- var commentariesAmount = article.commentaries ? article.commentaries.length : 0;

if article.image
	.articleBackground.bg(style=(article.image && article.image.B ? 'background-image: url("/img/uploads/#{article.image.B}");' : 'background-image: url("/img/uploads/#{article.image.background}");'))

.content
	include ../helpers/breadcrumbs
	
	.topper_title
		| #{article.theme.name}
	
	.title
		.label.adorable_table
			.adorable_cell
				| #{article.title}
		
		.middle
			.column.feedback
				.adorable_table
					.adorable_cell
						img.like(src="/img/user/article/heart.png", data-component_id="#{article._id}", data-component="Article")
						span.count.like(data-component_id="#{article._id}")
							| #{likesAmount}
						span.approve
							| мамочек
							br
							| одобряют
						
						img.comment(src="/img/user/article/comment.png")
						span.count.commentariesCount(data-component_id="#{article._id}")
							| #{commentariesAmount}

			//.column
			//	.adorable_table
			//		.adorable_cell
			//			.rounded.avatar
			//				img.rounded(src='/img/avatar_100x100.jpg')
						
			
			.column.social
				.adorable_table
					.adorable_cell
						.social_button
							.fb-like(data-href = current_url, data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")
						
						.social_button
							a(href="https://twitter.com/share" class="twitter-share-button") Tweet
						
						.social_button
							div(id="vk_top_article_" + params.alias)
						
						.social_button
							div(id="ok_top_article_" + params.alias)
						
						.social_button
							.g-plusone(data-size="medium")

		//.bottom
		//	.top_label Ирина Потапенко
		//	.bottom_label Детки: мальчик и девочка
	
	if article.is_quiz

		.poll_container
			.text
				| !{article.desc.text}

			.center.pollContentWrapper(style=(user ? '' : 'display: none'))
				if userVoted
					.plz Вы уже проголосовали в этом опросе

				else
					form(name='pollForm', class='pollForm options_container')

						input(type="hidden", name="article", value="#{article._id}")

						.options_container

								- each answerItem, answerKey in article.answer
									.option
										.radio_cell
											.checkbox
												input(name="answer", type="radio", value="#{answerItem._id}")
												label
													.img
										.label #{answerItem.text}

						.bottom.adorable_table
							.adorable_cell
								button.poll_button(type="submit") Проголосовать

					.plz Для того, чтобы увидеть результаты опроса, плз, ответьте сами

				.social
					.social_button
						.fb-like(data-href = current_url, data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")

					.social_button
						a(href="https://twitter.com/share" class="twitter-share-button") Tweet

					.social_button
						div(id="vk_top_poll_" + params.alias)

					.social_button
						div(id="ok_top_poll_" + params.alias)

					.social_button
						.g-plusone(data-size="medium")

			.login_box(style=(user ? 'display: none' : ''))
				.info.column.double
					.adorable_table
						.adorable_cell
							.warning Добавлять комментарии могут только авторизированные пользователи
							.explanation
								| Есть что сказать? Авторизуйтесь и используйте 
								span.italic все приимущества
								|  своего профиля!
								.links
								a.login(href="/login", class="new_module") Вход
								span /
								a.register(href="/registration", class="new_module") Регистрация

			.footer
				.adorable_table
					.adorable_cell
						img.like(src="/img/user/article/heart.png", data-component_id="#{article._id}", data-component="Article")
						span.count.like(data-component_id="#{article._id}")
							| #{likesAmount}
						span.approve
							| мамочек
							br
							| одобряют
						
						img.comment(src="/img/user/article/comment.png")
						span.count.commentariesCount(data-component_id="#{article._id}")
							| #{commentariesAmount}

		.poll_container.answered
			.center
				.title
					.question
						.question_info
							.adorable_table
								.adorable_cell Воспитание и уход за малышом — ответственный и сложный процесс. Вот почему нам необходимо знать ваше мнение по этому вопросу.
					
					div Результаты опроса:
				
				.options_container.pollResults(style=(userVoted ? '' : 'display: none'))

					- each answerItem, answerKey in article.answer

						.option
							.radio_cell #{answerItem.percent}%
							.label
								div #{answerItem.text}
								.progress_line
									.progress(style="width: #{answerItem.percent}%;")
				
				.plz(style=(userVoted ? 'display: none' : '')) Для того, чтобы увидеть результаты опроса, плз, ответьте сами
				.social
					.social_button
						.fb-like(data-href = current_url, data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")
					
					.social_button
						a(href="https://twitter.com/share" class="twitter-share-button") Tweet
					
					.social_button
						div(id="vk_bottom_poll_" + params.alias)
					
					.social_button
						div(id="ok_bottom_poll_" + params.alias)
					
					.social_button
						.g-plusone(data-size="medium")

	else
		.article_content
			.left.column.double
				.left_content
					.date
						.adorable_table
							.adorable_cell

								- var date = new Date(article.updated);
								- var day = date.getDate();
								- var monthNames = [ "Января", "Февраля", "Марта", "Апреля", "Мая", "Июня", "Июля", "Августа", "Сентября", "Октября", "Ноября", "Декабря" ];
								- var month = monthNames[date.getMonth()];
								- var year = date.getFullYear();
								- var hours = date.getHours();
								- var minutes = (date.getMinutes()<10?'0':'') + date.getMinutes()

								span.day_month_year #{day} #{month} #{year}
								span.time #{hours}:#{minutes}
					
					.text
						| !{article.desc.text}
					
					.social
						.social_button
							.fb-like(data-href = current_url, data-layout="button_count", data-action="like", data-show-faces="false", data-share="false")
						
						.social_button
							a(href="https://twitter.com/share" class="twitter-share-button") Tweet
						
						.social_button
							div(id="vk_bottom_article_" + params.alias)
						
						.social_button
							div(id="ok_bottom_article_" + params.alias)
						
						.social_button
							.g-plusone(data-size="medium")
					
					.copyright © 2014 Копипаст редакции
				
				.footer
					.half.left
						.adorable_table
							.adorable_cell
								img.comment(src="/img/user/article/comment.png")
								span.count.commentariesCount(data-component_id="#{article._id}")
									| #{commentariesAmount}
								span.slash / 
								span.post_comment Комментировать
								
					.half.right
						.adorable_table
							.adorable_cell
								img.like(src="/img/user/article/heart.png", data-component_id="#{article._id}", data-component="Article")
								span.count.like(data-component_id="#{article._id}")
									| #{likesAmount}
								span.slash / 
								span.post_like Одобрить
			
			.right.column
				.question.adorable_table
					.adorable_cell
						.title Появился вопрос?
						.subtitle Задай его специалисту!
						.avatar
							img.rounded(src='/img/user/specialist/doc_mini.jpg')
						.name Ирина Матвиенко
						.info Кандидат медицинских наук, старший научный сотрудник отделения медицинских проблем здорового ребенка и преморбидных состояний.
						button.ask_button Задать вопрос
			.clearfix
	
	include ../helpers/article_bottom
