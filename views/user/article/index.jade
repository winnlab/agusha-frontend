extends ../layout

block append header
	link(href="/css/user/article/article.css" rel="stylesheet")
	if article.image && article.image.SOCIAL
		meta(property="og:image" content = (base_url + '/img/uploads/' + article.image.SOCIAL))
	meta(property="og:title" content = article.title)

block content
	.module.server.article
		include content

block append scripts
	script.
		var app = {
			article: !{JSON.stringify(article)}
		};