doctype html
html
	head
		meta(charset="UTF-8")
		title Агуша
		link(href='/img/favicon.ico', rel='shortcut icon', type='image/x-icon')
		block header
	
	body
		#preloader(style="position: fixed; width: 100%; height: 100%; top: 0; left: 0; right: 0; bottom: 0; background-color: #f2efed; z-index: 999999;")
			img(src="/img/preloader.gif" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; margin: auto;")
		
		#main_container
			.left_menu.left_resizable

			.left_inner_menu.left_resizable
			
			#center_container
				#modules
					block content

			#right_menu
		
		#left_menu.left_menu.left_resizable
			.left_content
				.close
				
				.top.active
					.small_logo
						a.new_module(href="/")
							img(src="/img/user/core/small_logo.png")
						
					.logo
						img.glow(src="/img/user/core/logo_glow.png")
						a.new_module(href="/")
							img#logo(src="/img/user/core/logo.png")
				
				.counter
					.count
						- var likes = [5, 0, 9, 8, 4]
						- each l, key in likes
							.number
								.line
									.symbol #{l}
					
					.counter_label мам уже одобрили!
				
				.center
					.adorable_cell
						.item.search_item
							input#search_input(placeholder="Поиск")
						
						a.item.adorable_table.encyclopedia.new_module(href="/encyclopedia")
							.icon
							.label
						
						.item.adorable_table.specialist
							.icon
							.label
						
						a.item.adorable_table.action.new_module(href="/products")
							.icon
							.label
						
						.item.adorable_table.about
							.icon
							.label
				
				.bottom
					.social
						.social_block.facebook
						.social_block.vkontakte
						.social_block.odnoklassniki
						.small_social_block
						
					.copyright
		
		#left_inner_menu.left_inner_menu.left_resizable
			.topper
				.adorable_table
					.adorable_cell
						.top_label Про агушу
						.label Пара слов о нас
			
			.center
				.adorable_cell
					a.item.adorable_table.new_module(href="/products")
						.adorable_cell Каталог продукции
					
					a.item.adorable_table.new_module(href="/production")
						.adorable_cell О производстве
					
					.item.adorable_table
						.adorable_cell Запись на экскурсию
		
		#register_corner
			img.lock(src="/img/user/core/lock.png")
			.labels.adorable_table
				.adorable_cell
					.label
						a.new_module(href="/registration") Регистрация
					.label
						a.new_module(href="/login") Вход
		
		include footer
		
		script(src="/js/plugins/steal/steal.js", config-path="/js/app/user/config.js", main="js/app/user/core/")
		
		block scripts
			include route