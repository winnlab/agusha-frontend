.topper.module_tab.module_tab_profile
	.close
	.settings
	.subToppper
		.percentage {{profile.filling}} %
		input.knob(
			type="text"
			data-readOnly=true
			data-width="128"
			data-height="128"
			data-thickness="0.22"
			data-linecap="round"
			data-fgColor="#2483b3"
			style="display: none"
		)
		.avatar
			| {{#if auth.isAuth}}
			img.rounded(src="{{image.large}}")
			| {{/if}}
		.name {{fullName}}

		.children
			{{#each children}}
			{{log}}
			.child
				.image
					img.rounded(src="{{image.small}}")
				
				.desc
					.adorable_table
						.adorable_cell
							.child_name {{name}}
							//- .child_age 6 мес.
			{{/each}}
	
.buttons
	a.item.adorable_table.messages.module_tab.module_tab_messages.new_module(href="/messages")
		.icon
		.label
	
	a.item.adorable_table.subscribes.module_tab.module_tab_subscriptions.new_module(href="/subscriptions")
		.icon
		.label
	
	a.item.adorable_table.moneybox.module_tab.module_tab_moneybox.new_module(href="/moneybox")
		.icon
		.label
	
	a.item.adorable_table.help.module_tab.module_tab_help.new_module(href="/help")
		.icon
		.label

a.right_footer.adorable_table.logout
	.adorable_cell
		.lock
		span Выход

