.content
	include ../helpers/breadcrumbs

	.topper_title Подписки

	.tabs
		.tabs_flex
			//- .tab.tab_selector.authors(data-tab="authors")
				.tab_selector_inside
					.title На авторов
			
			.tab.tab_selector.themes.active(data-tab="themes")
				.tab_selector_inside
					.title На темы

	.tab_contents
		.tab_content.tab_selector.themes.active
			- if (subscriptions.length)
				.tab_head
					.age
						.adorable_table
							.adorable_cell Возраст

					.theme
						.adorable_table
							.adorable_cell Тема

					.unsub
						.adorable_table
							.adorable_cell Отписаться			
				- each subscription, key in subscriptions
					.tab_block
						.close(data-theme_id = subscription.theme_id.toString())
						.title
							.title_inner
								.age
									.adorable_table
										.adorable_cell
											img.rounded.title_img(src="/img/uploads/#{subscription.ageImg}")
											.label= subscription.age
								.theme
									.adorable_table
										.adorable_cell= subscription.name
			- else
				h1= "У вас нет подписок"
		.tab_content.tab_selector.authors
			.tab_head
				.age
					.adorable_table
						.adorable_cell Возраст
				
				.theme
					.adorable_table
						.adorable_cell Тема
				
				.unsub
					.adorable_table
						.adorable_cell Отписатся
